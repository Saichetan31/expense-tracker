<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense List</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" type="text/css" href="/styles/styles.css">
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Expense Tracker</h1>
    <a href="/expenses/new" class="btn btn-primary mb-3">Add New Expense</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% expenses.forEach(expense => { %>
          <tr>
            <td><%= expense.description %></td>
            <td>$<%= Number(expense.amount).toFixed(2) %></td>
            <td><%= new Date(expense.date).toDateString() %></td>
            <td>
              <a href="/expenses/<%= expense.id %>" class="btn btn-view btn-sm">View</a>
              <a href="/expenses/<%= expense.id %>/edit" class="btn btn-edit btn-sm">Edit</a>
              <form action="/expenses/<%= expense.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-delete btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
